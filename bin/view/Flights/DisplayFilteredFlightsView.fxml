<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox alignment="CENTER" styleClass="background" prefHeight="800.0" prefWidth="600.0" spacing="20" 
xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Flights.DisplayFlightsController">
    <ImageView fitHeight="200" fitWidth="800" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@../../image/flight.png" /> 
        </image>
    </ImageView>

    <Separator/>
    <Label text="Flights" styleClass="heading"/>
    <Separator/> 

    <VBox alignment="CENTER" spacing="10">
        <Label text="Country" minWidth="80"/>
        <TextField fx:id="countryTF"/>
    </VBox>

    <!-- table -->
    
    <Region VBox.vgrow="ALWAYS" />

    <GridPane hgap="0" vgap="0" VBox.vgrow="ALWAYS">
        <Button text="Close" fx:id="CButton"  GridPane.columnIndex="4" styleClass="darkBlueButton" GridPane.hgrow="ALWAYS" maxWidth="Infinity" maxHeight="Infinity"/>
    </GridPane>
    
    <stylesheets>
        <URL value="@../style.css"/>
    </stylesheets>        
</VBox>