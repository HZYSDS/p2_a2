<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>


<VBox alignment="CENTER" styleClass="background" prefHeight="250.0" prefWidth="400.0" spacing="20" 
xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Error.ErrorController" >
      <!-- Inserting the ImageView to display the  -->
    <ImageView fitHeight="100" fitWidth="400" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@../../image/error.png" /> 
        </image>
    </ImageView>

    <Separator/>
    <Label text="Error" styleClass="heading"/>
    <Separator/> 

    <VBox spacing="10" alignment="CENTER">
        <Label fx:id="aLabel" styleClass="errorLabel"/>
        <Label fx:id="bLabel" styleClass="Label"/>
    </VBox>
    
    <GridPane hgap="10" vgap="10" VBox.vgrow="ALWAYS" >
        <Button text="Close" fx:id="CButton" onAction="#handleCButton" GridPane.columnIndex="0" 
        styleClass="darkBlueButton" GridPane.hgrow="ALWAYS" maxWidth="Infinity" maxHeight="Infinity"/>
    </GridPane>

    <stylesheets>
        <URL value="@../style.css"/>
    </stylesheets>
</VBox>